<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

  <style name="WidgetTextView" parent="android:TextAppearance">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:textColor">@color/colorTextPrimary</item>
  </style>

  <style name="WidgetTextView.title">
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
  </style>

  <style name="WidgetTextView.helper">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  </style>

  <style name="WidgetTextView.normal">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="WidgetTextView.label">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="WidgetTextView.normal.strong">
    <item name="android:textStyle">bold</item>
  </style>


  <style name="WidgetTextView.menu">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="WidgetTextView.strong">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="WidgetTextView.input">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textSize">14sp</item>
  </style>
</resources>
